<div class="navbar navbar-expand-lg" id="header">
  <a class="navbar-brand" href="/response" >ORCUS</a>

  <button
    class="navbar-toggler"
    type="button"
    data-bs-toggle="collapse"
    data-bs-target="#navbarSupportedContent"
    aria-controls="navbarSupportedContent"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="toggler-icon"><i class="fa-solid fa-bars"></i></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mx-auto">
      <li class="nav-item">
        <a class="nav-link active" href="#">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">Team</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="#">Projects</a>
      </li>
    </ul>

    <% if (isIndexView) { %>
      <!-- Render the <ul> for the index view here -->
      <ul class="navbar-nav ml-auto">
        <li>
          <a class="btn login-link" href="/login">LOGIN</a>
        </li>
        <li>
          <a class="btn register-link" href="/register">REGISTER</a>
        </li>
      </ul>
    <% } else { %>
      <!-- Render the <ul> for other views here -->
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#">
            <i class="fas fa-shopping-cart"></i>
          </a>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            id="navbarDropdownMenuLink"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="fas fa-bell"></i>
            <span class="badge bg-danger">1</span>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink" id="newsList">
            <% for (const notification of notifications) { %>
              <li><%= notification.news %></li>
            <% } %>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle d-flex align-items-center"
            href="#"
            id="navbarDropdownMenuAvatar"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp"
              class="rounded-circle"
              height="25"
              alt="Black and White Portrait of a Man"
              loading="lazy"
            />
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
            <li>
              <button type="button" class="btn dropdown-item" data-bs-toggle="modal" data-bs-target="#profileCardModal">
                My Profile
              </button>
            </li>
            <li>
              <a class="dropdown-item" href="#">Settings</a>
            </li>
            <li>
              <a class="dropdown-item" href="/logout">Logout</a>
            </li>
          </ul>
        </li>
      </ul>
    <% } %>
  </div>
</div>



<!-- Profile Card Modal -->
<div class="modal fade" id="profileCardModal" tabindex="-1" aria-labelledby="profileCardModalLabel" aria-hidden="true">
  <!-- Profile Card Modal Content -->
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="profileCardModalLabel">My Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row g-0">
          <div class="col-md-4 gradient-custom text-center text-white"
            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
              alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
            <h5>Marie Horwitz</h5>
            <p>Web Designer</p>
            <i class="far fa-edit mb-5"></i>
          </div>
          <div class="col-md-8">
            <div class="card-body p-4">
              <h6>Information</h6>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Email</h6>
                  <% if (user && user.email) { %>
                    <p class="text-muted"><%= user.email %></p>
                  <% } else { %>
                    <p class="text-muted">Email not available</p>
                  <% } %>
                </div>
                <div class="col-6 mb-3">
                  <h6>Phone</h6>
                  <% if (user && user.phone) { %>
                    <p class="text-muted"><%= user.phone %></p>
                  <% } else { %>
                    <p class="text-muted">Phone not available</p>
                  <% } %>
                </div>
              </div>
              <h6>Projects</h6>
              <hr class="mt-0 mb-4">
              <div class="row pt-1">
                <div class="col-6 mb-3">
                  <h6>Recent</h6>
                  <p class="text-muted">Lorem ipsum</p>
                </div>
                <div class="col-6 mb-3">
                  <h6>Most Viewed</h6>
                  <p class="text-muted">Dolor sit amet</p>
                </div>
              </div>
              <div class="d-flex justify-content-start">
                <a href="#!"><i class="fab fa-facebook-f fa-lg me-3"></i></a>
                <a href="#!"><i class="fab fa-twitter fa-lg me-3"></i></a>
                <a href="#!"><i class="fab fa-instagram fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

